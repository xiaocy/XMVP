<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menuTextStyle">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>s

    <style name="TransparentStyleBottom"  parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextAppearance">@style/menuTextStyle</item>
        <item name="android:windowIsTranslucent">true</item><!--半透明            -->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明          -->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>
    <style name="RxPicker.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/rxpicker_colorPrimary</item>
        <item name="colorPrimaryDark">@color/rxpicker_colorPrimaryDark</item>
        <item name="colorAccent">@color/rxpicker_colorAccent</item>
    </style>

    <!-- RxPickerActivity Theme-->
    <style name="RxPicker.AppTheme.NoActionBar" parent="RxPicker.AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>


    <style name="RxPicker.ToolbarTheme" parent="RxPicker.AppTheme.NoActionBar">
        <item name="titleTextColor">@color/rxpicker_width</item>
        <item name="android:textColorSecondary">@color/rxpicker_width</item>
        <item name="android:textColor">@color/rxpicker_width</item>
        <item name="android:background">@color/rxpicker_colorPrimaryDark</item>
    </style>

    <style name="RxPicker.PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/rxpicker_fade_in</item>
        <item name="android:windowExitAnimation">@anim/rxpicker_fade_out</item>
    </style>
    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="gray_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#1A000000</item>
    </style>

    <style name="Prompt_Anim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_out_anim</item>
    </style>

    <style name="gradientButton">
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/gradient_button_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="HighlightView" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="sticker_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="head_default">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/height_100px</item>
    </style>

    <style name="message_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">#efddd7</item>
    </style>

    <style name="text_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">tagClick</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="drawTextStyle">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textSize">@dimen/menu_text_size_1</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <!--文字编辑模块-->
    <style name="translucent">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_out</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_in</item>
    </style>
    <style name="globalDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Widget.GifMoviewView" parent="@android:style/Widget"></style>



</resources>
